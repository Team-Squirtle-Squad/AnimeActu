{% extends "@App/layout.html.twig" %}

{% block body %}


    <div class="container" style="margin-top: 50px;">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Titre</th>
                <th scope="col">Note</th>


                <th scope="col">Modifier</th>
                <th scope="col">Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for note in notes %}
                <tr>
                    <td>{{ note.anime.titre }}</td>
                    <td>{{ note.note }}</td>
                    <td><a href="{{ path('formulaire_note_update',{id: note.id}) }}">Modifier</a></td>
                    <td><a href="{{ path('delete_note',{id: note.id}) }}">Supprimer</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('formulaire_note') }}" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Ajouter</a>

    </div>
{% endblock %}