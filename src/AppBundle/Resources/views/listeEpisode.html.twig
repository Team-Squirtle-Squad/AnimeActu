{% extends "@App/layout.html.twig" %}

{% block body %}


    <div class="container" style="margin-top: 50px;">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Titre</th>
                <th scope="col">Numéro épisode</th>
                <th scope="col">Nombre Saison</th>
                <th scope="col">Titre épisode</th>

                <th scope="col">Modifier</th>
                <th scope="col">Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for episode in episodes %}
                <tr>
                    <td>{{ episode.saisons.animes.titre }}</td>
                    <td>{{ episode.numEpisode }}</td>
                    <td>{{ episode.saisons.nbSaison }}</td>
                    <td>{{ episode.titreEpisode }}</td>
                    <td><a href="{{ path('formulaire_episode_update',{id: episode.id}) }}">Modifier</a></td>
                    <td><a href="{{ path('delete_Episode',{id: episode.id}) }}">Supprimer</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('formulaire_episode') }}" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Ajouter</a>

    </div>
{% endblock %}