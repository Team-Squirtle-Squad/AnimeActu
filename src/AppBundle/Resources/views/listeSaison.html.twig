{% extends "@App/layout.html.twig" %}

{% block body %}

    <div class="container" style="margin-top: 50px;">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Titre</th>
                <th scope="col">Nombre Saison</th>
                <th scope="col">Sortie</th>
                <th scope="col">Date Sortie</th>
                <th scope="col">Date Fini</th>
                <th scope="col">Modifier</th>
                <th scope="col">Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for saison in saisons %}
                <tr>
                    <td>{{ saison.animes.titre }}</td>
                    <td>{{ saison.nbSaison }}</td>
                    <td>{% if saison.isSortie %}Oui{% else %}Non{% endif%}</td>
                    <td>{{ saison.DateSortie|date('d-m-Y') }}</td>
                    <td>{{ saison.DateFini|date('d-m-Y') }}</td>
                    <td><a href="{{ path('formulaire_saison_update',{id: saison.id}) }}">Modifier</a></td>
                    <td><a href="{{ path('delete_Saison',{id: saison.id}) }}">Supprimer</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('formulaire_saison') }}" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Ajouter</a>

    </div>
{% endblock %}