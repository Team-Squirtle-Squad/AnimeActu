{% extends "@App/layout.html.twig" %}

{% block body %}


    <div class="container" style="margin-top: 50px;">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Titre Article</th>
                <th scope="col">Description</th>
                <th scope="col">Date Article</th>
                <th scope="col">Image</th>
                <th scope="col">Video</th>
                <th scope="col">Modifier</th>
                <th scope="col">Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.titreArticle }}</td>
                    <td>{{ article.description }}</td>
                    <td>{{ article.dateArticle|date('d-m-Y') }}</td>
                    <td>{{ article.image }}</td>
                    <td>{{ article.video }}</td>
                    <td><a href="{{ path('formulaire_article_update',{id: article.id}) }}">Modifier</a></td>
                    <td><a href="{{ path('delete_Article',{id: article.id}) }}">Supprimer</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('formulaire_article') }}" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Ajouter</a>

    </div>
{% endblock %}