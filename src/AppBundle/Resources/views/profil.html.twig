{% extends "@App/layout.html.twig" %}

{% block body %}

    <div class="container">

    <div class="row justify-content-md-center">

        <div class="col-lg-12 col-md-12">

            <div class="row justify-content-md-center title-small-first">Pseudo de l'utilisateur</div>

            <img src="{{ asset('assets/images/signature.png') }}" class="img-fluid">

        </div>

        <div class="col-lg-3 col-md-6">

            <div class="row justify-content-md-center title-small">Avatar</div>

            <img src="{{ asset('assets/images/avatar.png') }}" class="img-fluid">

        </div>

        <div class="col-lg-3 col-md-6">

            <div class="row justify-content-md-center title-small">Niveau et expérience</div>

            <div class="col-lg-12 col-md-12">

                <p class="niveau">Nv. 1</p>
                <p class="experience"> 0 xp. / 10 xp.</p>


            </div>

        </div>

        <div class="col-lg-6 col-md-12">

            <div class="row justify-content-md-center title-small">Derniers succès</div>

            <div class="row justify-content-md-center">

            {% for i in 1..3 %}

                <div class="col-lg-4 col-md-4">

                    <img src="{{ asset('assets/images/succes.png') }}" class="img-fluid">
                    <br>
                    <br>
                    <p class="nom_succes">Nom du succès</p>
                    <p class="exp_succes">5 xp.</p>

                </div>

            {% endfor %}

            </div>

        </div>

        <div class="col-lg-12 col-md-12">

            <div class="row justify-content-md-center title-small">Succès</div>

            <div class="row justify-content-md-center">

            {% for i in 1..30 %}

                <div class="col-lg-2 col-md-2">

                    <img src="{{ asset('assets/images/succes.png') }}" class="img-fluid">
                    <br>
                    <br>
                    <p class="nom_succes">Nom du succès</p>
                    <p class="exp_succes">5 exp.</p>

                </div>

            {% endfor %}

            </div>

        </div>


    </div>

{% endblock %}