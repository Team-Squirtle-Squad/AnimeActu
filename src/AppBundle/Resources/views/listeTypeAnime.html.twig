{% extends "@App/layout.html.twig" %}

{% block body %}

    <div class="container" style="margin-top: 50px;">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Type</th>
                <th scope="col">Modifier</th>
                <th scope="col">Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for typeAnime in typesAnimes %}
                <tr>
                    <td>{{ typeAnime.libelleTypeAnime }}</td>
                    <td><a href="{{ path('formulaire_type_anime_update',{id: typeAnime.id}) }}">Modifier</a></td>
                    <td><a href="{{ path('delete_type_anime',{id: typeAnime.id}) }}">Supprimer</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('formulaire_type_anime') }}" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Ajouter</a>

    </div>
{% endblock %}